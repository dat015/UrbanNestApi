{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",

  // Cấu hình YARP
  "ReverseProxy": {
    "Routes": {
      "apartment-route": {
        "ClusterId": "apartment-cluster",
        "Match": {
          "Path": "/api/apartments/{**catch-all}"
        }
      }
    },
    "Clusters": {
      "apartment-cluster": {
        "Destinations": {
          "destination1": {
            "Address": "http://localhost:5001"
          }
        }
      }
    }
  }
}